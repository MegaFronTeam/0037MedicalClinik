mixin sLatestNews(data)
	// start sLatestNews
	+b.SECTION.sLatestNews.section#sLatestNews&attributes(attributes)
		.container
			+b.section-title.text-center
				h2 Latest News
			+e.row.row
				mixin item(img, title, id)
					+e.item(data-fancybox="modal" data-src=id)
						+img(`img/${img}`)
						+e.content
							//- +e.date June 10, 2018
							h3!= title
							+e.btn.btn.btn-primary learn more
				.col-lg-6
					+item('sLatestNews-img-1.jpg', 'The Department for international patients...', 'modal-article')
				.col-lg-6
					+item('sLatestNews-img-2.jpg', 'How safe is the DaVinci Xi?', 'modal-article-2')
	// end sLatestNews